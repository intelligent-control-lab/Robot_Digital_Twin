<launch>
    <arg name = "plate_green" default="plate_green"/>
    <param name="plate_green_description" command="$(find xacro)/xacro $(find robot_digital_twin)/urdf/plate.xacro 
                                                    plate_color:='Green'"/>
    <node name="spawn_plate_green" pkg="gazebo_ros" type="spawn_model"
      args="-param plate_green_description
            -urdf 
            -x 0.4
            -y 0.3
            -z 0.01
            -model $(arg plate_green)"
      respawn="false" output="screen">
    </node>

    <arg name = "plate_yellow" default="plate_yellow"/>
    <param name="plate_yellow_description" command="$(find xacro)/xacro $(find robot_digital_twin)/urdf/plate.xacro 
                                                    plate_color:='Yellow'"/>
    <node name="spawn_plate_yellow" pkg="gazebo_ros" type="spawn_model"
      args="-param plate_yellow_description
            -urdf 
            -x 0.4
            -y -0.3
            -z 0.01
            -model $(arg plate_yellow)"
      respawn="false" output="screen">
    </node>

    <arg name = "plate_red" default="plate_red"/>
    <param name="plate_red_description" command="$(find xacro)/xacro $(find robot_digital_twin)/urdf/plate.xacro 
                                                    plate_color:='Red'"/>
